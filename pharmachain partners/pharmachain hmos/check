}
.form-group {
    display: flex; /* Use flexbox for the form group */
    flex-wrap: wrap ; /* Allow wrapping of form elements */
    justify-content: space-between; /* Space out the elements */
    margin-bottom: 1em; /* Space below each form group */

}

label {
    flex: 1 1 48%; /* Full width label */
    margin-bottom: 1em; /* Space below the label */
    font-weight: 0.5; /* Bold text for the label */
    font-size: 1em;
}



input[type="text"],
input[type="email"],
input[type="tel"],
select,
textarea {
    flex: 1 1 48%; /* Input fields take up about half the width */
    padding: 0.5em; /* Padding inside the input fields */
    border: 1px solid #ccc; /* Light grey border */
    border-radius: 4px; /* Rounded corners */
    box-sizing: border-box; /* Include padding and border in the element's total width and height */
    margin-bottom: 1em; /* Space below each input */
}

input[type="text"]:nth-child(odd),
input[type="email"]:nth-child(odd),
input[type="tel"]:nth-child(odd),
select:nth-child(odd),
textarea:nth-child(odd) {
    margin-right: 4%; /* Space to the right of odd items */
}

.phone-input {
    display: flex; /* Use flexbox for the phone input */
    align-items: center; /* Center items vertically */
    width: 100%; /* Half the width of the container */
}

.phone-input input {
    width: 100%; /* Half the width of the container */
}

.phone-input span {
    margin-left: 1em; /* Space to the left of the span */
    background-color: #eee; /* Light grey background */
    padding: 0.5em; /* Padding inside the span */
    border: 1px solid #ccc; /* Light grey border */
    border-radius: 4px; /* Rounded corners */
}
input[type="submit"] {
    width: 100%; /* Full width submit button */
    padding: 1em; /* Padding inside the button */
    background-color: #007bff; /* Blue background */
    color: white; /* White text */
    border: none; /* Remove default border */
    border-radius: 20px; /* Rounded corners */
    cursor: pointer; /* Pointer cursor on hover */
    font-size: 1em; /* Increase font size */
}

input[type="submit"]:hover {
    background-color: #0056b3; /* Darker blue on hover */
}

.terms {
    margin-top: 1em; /* Space above the terms text */
    font-size: 0.9em; /* Slightly smaller text */
}

.terms a {
    color: #007bff; /* Blue links */
    text-decoration: none; /* Remove underline */
}

.terms a:hover {
    text-decoration: underline; /* Underline on hover */
}




















